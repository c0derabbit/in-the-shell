{{!< default}}

{{#foreach posts}}
  <article class="{{post_class}}">
    <h2><a href="{{url}}">{{{title}}}</a></h2>
    <span class="post-meta">
      {{author}} |
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
      <br />
      {{tags}}
    </span>
    <section class="post-excerpt">
      <p>{{excerpt}}&hellip;</p>
    </section>
  </article>
{{/foreach}}

{{pagination}}
